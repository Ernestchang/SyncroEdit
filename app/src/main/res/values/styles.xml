<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WithActionBarSearch" parent="AppTheme">
<!--        <item name="android:windowBackground">@color/contact_search_background</item>-->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="fontRegular">
        <item name="roboFont">RobotoCondensed-Regular</item>
    </style>

    <style name="fontItalic">
        <item name="roboFont">RobotoCondensed-LightItalic</item>
    </style>

    <style name="fontBold">
        <item name="roboFont">RobotoCondensed-BoldItalic</item>
    </style>

    <style name="notelist_note_title" parent="fontBold">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="notelist_note_creator" parent="fontRegular">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_very_small</item>
    </style>

    <style name="notelist_note_timestamp" parent="fontRegular">
        <item name="android:textSize">@dimen/txt_very_small</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_very_small</item>
    </style>

    <style name="signin_message" parent="fontItalic">
        <item name="android:textSize">@dimen/txt_big</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="regular_bigfont_wrap_content" parent="fontRegular">
        <item name="android:textSize">@dimen/txt_big</item>
        <!--        <item name="android:textColor">@color/pure_black</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="regular_mediumfont_wrap_content" parent="fontRegular">
        <item name="android:textSize">@dimen/txt_medium</item>
        <!--        <item name="android:textColor">@color/pure_black</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="regular_vsmallfont_wrap_content" parent="fontRegular">
        <item name="android:textSize">@dimen/txt_very_small</item>
        <!--        <item name="android:textColor">@color/pure_black</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
